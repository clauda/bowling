<h1><%= link_to @post.title, @post %></h1>
<p style="text-align:right;padding:5px;font-size:14px"><%= l(@post.published_at) if @post.published_at %></p>

<%= textilize @post.body %>

<p style="color:grey;text-align:right;"><i>por <%= link_to @post.user.name, profiles_path %></i></p>
 <%= tweet_button %>

<p>
<% @post.categories.each do |c| %>
  <%= c.name %><br />
<% end %>
</p>
<p><%= @post.comments.count %> Comments</p>

<div id="comments">
<%- if @post.comments.any? -%>
  <%= render @post.comments %>
<%- end -%>
</div>

<%= render "comments/form", :post => @post, :comment => Comment.new %>


<% content_for :foot do %>
  <% tag_cloud(Post.tag_counts_on(:tags), %w(css1 css2 css3 css4)) do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), :class => css_class %>
  <% end %>

  <% Category.all.each do |c| %>
    <%= link_to c.name, posts_path, :class => "css2" %>
  <% end %>
  <%#TODO: filtro de posts por categoria e por tag %>
<% end %>
