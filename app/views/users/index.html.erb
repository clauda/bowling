<h1><%= t("Users") %></h1>
<div class="block">
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Posts</th>
      <th></th>
    </tr>

  <% @users.each do |u| %>
    <tr>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.posts.size %></td>
      <td><%= link_to image_tag('edit.png'), edit_profile_path(u.profile) %></td>
    </tr>
  <% end %>
  </table>

  <br />

</div>
